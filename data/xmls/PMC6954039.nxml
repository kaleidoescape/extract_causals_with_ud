e">/</mml:mo><mml:mn>2</mml:mn><mml:mo stretchy="false">}</mml:mo></mml:mrow></mml:munder><mml:mrow><mml:mspace width="4pt"/><mml:mo stretchy="false">|</mml:mo></mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mrow><mml:mo>,</mml:mo><mml:mi>m</mml:mi><mml:mo stretchy="false">&#x027e9;</mml:mo><mml:mo stretchy="false">&#x027e8;</mml:mo></mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mrow><mml:mo>,</mml:mo><mml:mi>m</mml:mi><mml:mo stretchy="false">|</mml:mo><mml:mrow><mml:mo maxsize="2.047em" minsize="2.047em" stretchy="true">]</mml:mo></mml:mrow></mml:mrow></mml:mrow></mml:mtd></mml:mtr><mml:mtr><mml:mtd columnalign="right"><mml:mrow><mml:mrow/><mml:mi>Z</mml:mi><mml:mo>:</mml:mo></mml:mrow></mml:mtd><mml:mtd columnalign="left"><mml:mrow><mml:mspace width="1em"/><mml:mfrac><mml:mn>1</mml:mn><mml:mn>2</mml:mn></mml:mfrac><mml:mrow><mml:mspace width="4pt"/><mml:mrow><mml:mo maxsize="2.047em" minsize="2.047em" stretchy="true">[</mml:mo></mml:mrow><mml:mo stretchy="false">|</mml:mo></mml:mrow><mml:msub><mml:mi mathvariant="italic">&#x003a6;</mml:mi><mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mo>,</mml:mo><mml:mn>0</mml:mn></mml:mrow></mml:msub><mml:mrow><mml:mo stretchy="false">&#x027e9;</mml:mo><mml:mo stretchy="false">&#x027e8;</mml:mo></mml:mrow><mml:msub><mml:mi mathvariant="italic">&#x003a6;</mml:mi><mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mo>,</mml:mo><mml:mn>0</mml:mn></mml:mrow></mml:msub><mml:mrow><mml:mo stretchy="false">|</mml:mo><mml:mo>&#x02297;</mml:mo></mml:mrow><mml:munder><mml:mo movablelimits="false">&#x02211;</mml:mo><mml:mrow><mml:mi>m</mml:mi><mml:mo>&#x02208;</mml:mo><mml:mo stretchy="false">{</mml:mo><mml:mo>&#x000b1;</mml:mo><mml:mn>1</mml:mn><mml:mo stretchy="false">/</mml:mo><mml:mn>2</mml:mn><mml:mo stretchy="false">}</mml:mo></mml:mrow></mml:munder><mml:mrow><mml:mspace width="4pt"/><mml:mo stretchy="false">|</mml:mo></mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x000b1;</mml:mo></mml:msub><mml:mrow><mml:mo>,</mml:mo><mml:mi>m</mml:mi><mml:mo stretchy="false">&#x027e9;</mml:mo><mml:mo stretchy="false">&#x027e8;</mml:mo></mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x000b1;</mml:mo></mml:msub><mml:mrow><mml:mo>,</mml:mo><mml:mi>m</mml:mi><mml:mo stretchy="false">|</mml:mo><mml:mrow><mml:mo maxsize="2.047em" minsize="2.047em" stretchy="true">]</mml:mo></mml:mrow></mml:mrow></mml:mrow></mml:mtd></mml:mtr><mml:mtr><mml:mtd columnalign="right"><mml:mrow><mml:mrow/><mml:mo stretchy="false">&#x027f6;</mml:mo></mml:mrow></mml:mtd><mml:mtd columnalign="left"><mml:mrow><mml:mrow/><mml:mo>&#x000b1;</mml:mo><mml:mfrac><mml:mn>1</mml:mn><mml:mn>2</mml:mn></mml:mfrac><mml:mrow><mml:mspace width="4pt"/><mml:mrow><mml:mo maxsize="2.047em" minsize="2.047em" stretchy="true">[</mml:mo></mml:mrow><mml:mo stretchy="false">|</mml:mo></mml:mrow><mml:msub><mml:mi mathvariant="italic">&#x003a6;</mml:mi><mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mo>,</mml:mo><mml:mn>0</mml:mn></mml:mrow></mml:msub><mml:mrow><mml:mo stretchy="false">&#x027e9;</mml:mo><mml:mo stretchy="false">&#x027e8;</mml:mo></mml:mrow><mml:msub><mml:mi mathvariant="italic">&#x003a6;</mml:mi><mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mo>,</mml:mo><mml:mn>0</mml:mn></mml:mrow></mml:msub><mml:mrow><mml:mo stretchy="false">|</mml:mo><mml:mo>&#x02297;</mml:mo></mml:mrow><mml:munder><mml:mo movablelimits="false">&#x02211;</mml:mo><mml:mrow><mml:mi>m</mml:mi><mml:mo>&#x02208;</mml:mo><mml:mo stretchy="false">{</mml:mo><mml:mo>&#x000b1;</mml:mo><mml:mn>1</mml:mn><mml:mo stretchy="false">/</mml:mo><mml:mn>2</mml:mn><mml:mo stretchy="false">}</mml:mo></mml:mrow></mml:munder><mml:mrow><mml:mspace width="4pt"/><mml:mo stretchy="false">|</mml:mo></mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x000b1;</mml:mo></mml:msub><mml:mrow><mml:mo>,</mml:mo><mml:mi>m</mml:mi><mml:mo stretchy="false">&#x027e9;</mml:mo><mml:mo stretchy="false">&#x027e8;</mml:mo></mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x000b1;</mml:mo></mml:msub><mml:mrow><mml:mo>,</mml:mo><mml:mi>m</mml:mi><mml:mo stretchy="false">|</mml:mo><mml:mrow><mml:mo maxsize="2.047em" minsize="2.047em" stretchy="true">]</mml:mo></mml:mrow></mml:mrow></mml:mrow></mml:mtd></mml:mtr></mml:mtable></mml:mrow></mml:math><graphic xlink:href="11128_2017_1792_Article_Equ30.gif" position="anchor"/></alternatives></disp-formula>The above operators satisfy the commutation relations of Pauli operators, e.g., <inline-formula id="IEq324"><alternatives><tex-math id="M715">\documentclass[12pt]{minimal}
				\usepackage{amsmath}
				\usepackage{wasysym} 
				\usepackage{amsfonts} 
				\usepackage{amssymb} 
				\usepackage{amsbsy}
				\usepackage{mathrsfs}
				\usepackage{upgreek}
				\setlength{\oddsidemargin}{-69pt}
				\begin{document}$$[X, Z] = 2 i Y$$\end{document}</tex-math><mml:math id="M716"><mml:mrow><mml:mo stretchy="false">[</mml:mo><mml:mi>X</mml:mi><mml:mo>,</mml:mo><mml:mi>Z</mml:mi><mml:mo stretchy="false">]</mml:mo><mml:mo>=</mml:mo><mml:mn>2</mml:mn><mml:mi>i</mml:mi><mml:mi>Y</mml:mi></mml:mrow></mml:math><inline-graphic xlink:href="11128_2017_1792_Article_IEq324.gif"/></alternatives></inline-formula>, and they obey the anti-commutation rule. Therefore, the set of operators generated by the multiplications of these logical gates and their Hermitian conjugation construct the algebra of a qubit. For completeness of the discussion, in order to implement any arbitrary coherent superposition of the logical basis, i.e., <inline-formula id="IEq325"><alternatives><tex-math id="M717">\documentclass[12pt]{minimal}
				\usepackage{amsmath}
				\usepackage{wasysym} 
				\usepackage{amsfonts} 
				\usepackage{amssymb} 
				\usepackage{amsbsy}
				\usepackage{mathrsfs}
				\usepackage{upgreek}
				\setlength{\oddsidemargin}{-69pt}
				\begin{document}$$|\psi \rangle = \cos \frac{\alpha }{2} \ |\bar{0}\rangle +e^{i\beta } \sin \frac{\alpha }{2}\ |\bar{1}\rangle $$\end{document}</tex-math><mml:math id="M718"><mml:mrow><mml:mrow><mml:mo stretchy="false">|</mml:mo><mml:mi mathvariant="italic">&#x003c8;</mml:mi><mml:mo stretchy="false">&#x027e9;</mml:mo></mml:mrow><mml:mo>=</mml:mo><mml:mo>cos</mml:mo><mml:mfrac><mml:mi mathvariant="italic">&#x003b1;</mml:mi><mml:mn>2</mml:mn></mml:mfrac><mml:mrow><mml:mspace width="4pt"/><mml:mo stretchy="false">|</mml:mo><mml:mover accent="true"><mml:mrow><mml:mn>0</mml:mn></mml:mrow><mml:mrow><mml:mo stretchy="false">&#x000af;</mml:mo></mml:mrow></mml:mover><mml:mo stretchy="false">&#x027e9;</mml:mo></mml:mrow><mml:mo>+</mml:mo><mml:msup><mml:mi>e</mml:mi><mml:mrow><mml:mi>i</mml:mi><mml:mi mathvariant="italic">&#x003b2;</mml:mi></mml:mrow></mml:msup><mml:mo>sin</mml:mo><mml:mfrac><mml:mi mathvariant="italic">&#x003b1;</mml:mi><mml:mn>2</mml:mn></mml:mfrac><mml:mspace width="4pt"/><mml:mrow><mml:mo stretchy="false">|</mml:mo><mml:mover accent="true"><mml:mrow><mml:mn>1</mml:mn></mml:mrow><mml:mrow><mml:mo stretchy="false">&#x000af;</mml:mo></mml:mrow></mml:mover><mml:mo stretchy="false">&#x027e9;</mml:mo></mml:mrow></mml:mrow></mml:math><inline-graphic xlink:href="11128_2017_1792_Article_IEq325.gif"/></alternatives></inline-formula>, one needs to implement the following rotation<disp-formula id="Equ35"><alternatives><tex-math id="M719">\documentclass[12pt]{minimal}
				\usepackage{amsmath}
				\usepackage{wasysym} 
				\usepackage{amsfonts} 
				\usepackage{amssymb} 
				\usepackage{amsbsy}
				\usepackage{mathrsfs}
