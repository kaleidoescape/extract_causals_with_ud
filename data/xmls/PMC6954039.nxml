				\setlength{\oddsidemargin}{-69pt}
				\begin{document}$$\begin{aligned} X:= &#x00026; {} U_{-}( \pi , 0) \ U_{+}(\pi , 0) \ U_{-}( \pi , 0), \nonumber \\ Z:= &#x00026; {} U_{-}(2 \pi , 0)\ U_{+}(2 \pi , 0)\ U_{-}(2 \pi , 0), \end{aligned}$$\end{document}</tex-math><mml:math id="M712" display="block"><mml:mrow><mml:mtable><mml:mtr><mml:mtd columnalign="right"><mml:mrow><mml:mi>X</mml:mi><mml:mo>:</mml:mo><mml:mo>=</mml:mo></mml:mrow></mml:mtd><mml:mtd columnalign="left"><mml:mrow><mml:mrow/><mml:msub><mml:mi>U</mml:mi><mml:mo>-</mml:mo></mml:msub><mml:mrow><mml:mo stretchy="false">(</mml:mo><mml:mi mathvariant="italic">&#x003c0;</mml:mi><mml:mo>,</mml:mo><mml:mn>0</mml:mn><mml:mo stretchy="false">)</mml:mo></mml:mrow><mml:mspace width="4pt"/><mml:msub><mml:mi>U</mml:mi><mml:mo>+</mml:mo></mml:msub><mml:mrow><mml:mo stretchy="false">(</mml:mo><mml:mi mathvariant="italic">&#x003c0;</mml:mi><mml:mo>,</mml:mo><mml:mn>0</mml:mn><mml:mo stretchy="false">)</mml:mo></mml:mrow><mml:mspace width="4pt"/><mml:msub><mml:mi>U</mml:mi><mml:mo>-</mml:mo></mml:msub><mml:mrow><mml:mo stretchy="false">(</mml:mo><mml:mi mathvariant="italic">&#x003c0;</mml:mi><mml:mo>,</mml:mo><mml:mn>0</mml:mn><mml:mo stretchy="false">)</mml:mo></mml:mrow><mml:mo>,</mml:mo></mml:mrow></mml:mtd></mml:mtr><mml:mtr><mml:mtd columnalign="right"><mml:mrow><mml:mrow/><mml:mi>Z</mml:mi><mml:mo>:</mml:mo><mml:mo>=</mml:mo></mml:mrow></mml:mtd><mml:mtd columnalign="left"><mml:mrow><mml:mrow/><mml:msub><mml:mi>U</mml:mi><mml:mo>-</mml:mo></mml:msub><mml:mrow><mml:mo stretchy="false">(</mml:mo><mml:mn>2</mml:mn><mml:mi mathvariant="italic">&#x003c0;</mml:mi><mml:mo>,</mml:mo><mml:mn>0</mml:mn><mml:mo stretchy="false">)</mml:mo></mml:mrow><mml:mspace width="4pt"/><mml:msub><mml:mi>U</mml:mi><mml:mo>+</mml:mo></mml:msub><mml:mrow><mml:mo stretchy="false">(</mml:mo><mml:mn>2</mml:mn><mml:mi mathvariant="italic">&#x003c0;</mml:mi><mml:mo>,</mml:mo><mml:mn>0</mml:mn><mml:mo stretchy="false">)</mml:mo></mml:mrow><mml:mspace width="4pt"/><mml:msub><mml:m