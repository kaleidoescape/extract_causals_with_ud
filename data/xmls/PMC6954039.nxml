				\setlength{\oddsidemargin}{-69pt}
				\begin{document}$$\begin{aligned} X:&#x00026;\quad \frac{1}{2}\ \bigg [ |\varPhi _{E_{\mp },0}\rangle \langle \varPhi _{E_{\mp },0}| \otimes \sum \limits _{m\in \{\pm 1/2\} } \ |E_{\pm },m \rangle \langle E_{\pm } ,m| \bigg ]\nonumber \\\longrightarrow &#x00026; {} \quad \frac{1}{2} \bigg [ |\varPhi _{E_{\pm },0}\rangle \langle \varPhi _{E_{\pm },0}| \otimes \sum \limits _{m\in \{\pm 1/2\} } \ |E_{\mp },m \rangle \langle E_{\mp } ,m| \bigg ]\nonumber \\ Z:&#x00026;\quad \frac{1}{2}\ \bigg [ |\varPhi _{E_{\mp },0}\rangle \langle \varPhi _{E_{\mp },0}| \otimes \sum \limits _{m\in \{\pm 1/2\} } \ |E_{\pm },m \rangle \langle E_{\pm } ,m| \bigg ] \nonumber \\\longrightarrow &#x00026; {} \pm \frac{1}{2}\ \bigg [ |\varPhi _{E_{\mp },0}\rangle \langle \varPhi _{E_{\mp },0}| \otimes \sum \limits _{m\in \{\pm 1/2\} } \ |E_{\pm },m \rangle \langle E_{\pm } ,m| \bigg ] \end{aligned}$$\end{document}</tex-math><mml:math id="M714" display="block"><mml:mrow><mml:mtable><mml:mtr><mml:mtd columnalign="right"><mml:mrow><mml:mi>X</mml:mi><mml:mo>:</mml:mo></mml:mrow></mml:mtd><mml:mtd columnalign="left"><mml:mrow><mml:mspace width="1em"/><mml:mfrac><mml:mn>1</mml:mn><mml:mn>2</mml:mn></mml:mfrac><mml:mrow><mml:mspace width="4pt"/><mml:mrow><mml:mo maxsize="2.047em" minsize="2.047em" stretchy="true">[</mml:mo></mml:mrow><mml:mo stretchy="false">|</mml:mo></mml:mrow><mml:msub><mml:mi mathvariant="italic">&#x003a6;</mml:mi><mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mo>,</mml:mo><mml:mn>0</mml:mn></mml:mrow></mml:msub><mml:mrow><mml:mo stretchy="false">&#x027e9;</mml:mo><mml:mo stretchy="false">&#x027e8;</mml:mo></mml:mrow><mml:msub><mml:mi mathvariant="italic">&#x003a6;</mml:mi><mml:mrow><mml:msub><mml:mi>E</mml:mi><mml:mo>&#x02213;</mml:mo></mml:msub><mml:mo>,</mml:mo><mml:mn>0</mml:mn></mml:mrow></mml:msub><mml:mrow><mml:mo stretchy="false">|</mml:mo><mml:mo>&#x02297;</mml:mo></mml:mrow><mml:munder><mml:mo movablelimits="false">&#x02211;</mml:mo>